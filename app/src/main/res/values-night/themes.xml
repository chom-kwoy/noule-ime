<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noule" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#90CAF9</item>          <!-- Soft light blue accent -->
        <item name="colorPrimaryVariant">#64B5F6</item>   <!-- Slightly darker blue -->
        <item name="colorOnPrimary">#000000</item>        <!-- Black text on light blue -->

        <item name="colorSecondary">#B0BEC5</item>        <!-- Neutral gray accent -->
        <item name="colorSecondaryVariant">#90A4AE</item> <!-- Slightly darker gray -->
        <item name="colorOnSecondary">#000000</item>      <!-- Black on gray -->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>
    <style name="Widget.MyApp.FlatButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
    </style>
    <style name="Widget.MyApp.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
    </style>
    <style name="Widget.MyApp.FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
    </style>
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>