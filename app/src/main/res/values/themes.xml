<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noule" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1565C0</item>          <!-- A medium blue (calm, professional) -->
        <item name="colorPrimaryVariant">#0D47A1</item>   <!-- A darker blue for status bar -->
        <item name="colorOnPrimary">#FFFFFF</item>        <!-- White text on blue -->

        <item name="colorSecondary">#546E7A</item>        <!-- Cool gray (for accents, buttons) -->
        <item name="colorSecondaryVariant">#455A64</item> <!-- Slightly darker gray -->
        <item name="colorOnSecondary">#FFFFFF</item>      <!-- White on gray -->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>
    <style name="Widget.MyApp.FlatButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
    </style>
    <style name="Widget.MyApp.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
    </style>
    <style name="Widget.MyApp.FilledButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="android:insetLeft">2dp</item>
        <item name="android:insetRight">2dp</item>
    </style>
    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>